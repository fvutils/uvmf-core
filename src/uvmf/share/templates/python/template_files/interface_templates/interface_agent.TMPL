{% block contents %}
class {{name}}_agent extends uvmf_deparameterized_agent #(
                    .CONFIG_T({{name}}_configuration),
                    .DRIVER_T({{name}}_driver),
                    .MONITOR_T({{name}}_monitor),
                    .COVERAGE_T({{name}}_transaction_coverage),
                    .TRANS_T({{name}}_transaction)
                    );

`uvm_component_utils({{name}}_agent)

// pragma uvmf custom class_item_additional begin
// pragma uvmf custom class_item_additional end

// ****************************************************************************
// FUNCTION : new()
// This function is the standard SystemVerilog constructor.
//
  function new( string name = "", uvm_component parent = null );
    super.new( name, parent );
  endfunction

// ****************************************************************************
  // FUNCTION: build_phase
  virtual function void build_phase(uvm_phase phase);
// pragma uvmf custom build_phase_pre_super begin
// pragma uvmf custom build_phase_pre_super end
    super.build_phase(phase);
    if (configuration.active_passive == ACTIVE) begin
      // Place sequencer handle into configuration object
      // so that it may be retrieved from configuration 
      // rather than using uvm_config_db
      configuration.sequencer = this.sequencer;
    end
  endfunction
  
endclass

